<can-component tag="<%= tag %>">
  <style type="less">
    display: block;

    p { font-weight: bold; }
  </style>
  <view>
    <p>{{message}}</p>
  </view>
  <script type="view-model">
    import { DefineMap } from 'can';

    export default DefineMap.extend({
      message: {
        default: 'This is the <%= tag %> component'
      }
    });
  </script>
</can-component>
